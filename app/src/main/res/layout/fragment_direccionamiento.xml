<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".direccionamiento.direccionamiento">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".direccionamiento.direccionamiento">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SELECCIONA UNA APLICACION"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"/>

        <ImageButton
            android:id="@+id/facebook"
            android:layout_width="207dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="99dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="104dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/facebook" />

        <ImageButton
            android:id="@+id/tiktok"
            android:layout_width="203dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="107dp"
            android:layout_marginTop="467dp"
            android:layout_marginEnd="101dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/tiktok" />

        <ImageButton
            android:id="@+id/whatsapp"
            android:layout_width="201dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="102dp"
            android:layout_marginTop="362dp"
            android:layout_marginEnd="107dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/whatsapp" />

        <ImageButton
            android:id="@+id/youtube"
            android:layout_width="201dp"
            android:layout_height="58dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="102dp"
            android:layout_marginTop="251dp"
            android:layout_marginEnd="107dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/youtube" />

        <ImageButton
            android:id="@+id/discord"
            android:layout_width="201dp"
            android:layout_height="58dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="106dp"
            android:layout_marginTop="583dp"
            android:layout_marginEnd="103dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/discord" />

    </RelativeLayout>

</FrameLayout>